# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 180
quote_type = double

[*.sql]
indent_style = tab
indent_size = 2

[*.{js,ts,html,htm,php}]
indent_size = 4

[*.md]
indent_style = tab
max_line_length = off
trim_trailing_whitespace = false

[*.{yml,yaml,cff}]
indent_size = 2
indent_style = space
